%section.contexto
    %label.contexto Empresas > Activar Empresas
    %hr.contexto{:size => "1"}
%section#areaTrabajo.areaTrabajo
    %p#notice= notice
    =render 'exportar_empresas_no_validadas'
    =form_tag update_multiple_empresas_path, :method => "put", :id => "activar_empresa" do
        %table#data_table_empresas_activacion.display{:"data-source" => "/empresas.json?activacion=true"}
            %thead
                %tr
                    %th Selección
                    %th Prefijo
                    %th Nombre Empresa
                    %th Fecha Inscripción
                    %th Dirección empresa
                    %th Estado
                    %th Ciudad
                    %th RIF
                    %th Estatus
            %tbody
            %tfoot
                =render 'footer_activacion'
        %br/
        %br/
        =hidden_field_tag "activacion", "true"
        %button#submit.ui-state-default.ui-corner-all.activar_empresa{:type => "submit", :title => "Activar empresas seleccionadas"}
            %span.ui-icon.ui-icon-circle-check
            Activar Empresa
        %a.ui-state-default.ui-corner-all.regresar{:href => "/empresas", :title => "Regrar al listado de Productos para esta Empresa"}
            %span.ui-icon.ui-icon-arrowreturnthick-1-w
            Regresar
      