%section.contexto
  %label.contexto
    =@navegabilidad
  %hr.contexto{:size => "1"}

%section#areaTrabajo.areaTrabajo
  %p#notice= notice
  =render 'exportar_servicios'
  %table#data_table_empresa_servicios.display{:"data-source" => "#{empresa_empresa_servicios_path}.json?empresa_retirada=#{@empresas_retiradas}"}
    %thead
      %tr
        %th Empresa
        %th Servicio
        %th Fecha Contratación
        %th Fecha Finalización
        %th Nombre Contacto
        %th Cargo Contacto
        %th Teléfono
        %th Correo
        -if UsuariosAlcance.verificar_alcance(session[:perfil], 'Modificar Servicio')
          -if params[:retirados].nil?
            %th Editar
        

    %tbody
    %tfoot
      =render 'empresa_servicios_footer'
  %br
  %br
  %a.ui-state-default.ui-corner-all.regresar_empresas_sin_espacio{:href => "/empresas", :title => "Regresar al listado general de empresas"}
    %span.ui-icon.ui-icon-arrowreturnthick-1-w
    Regresar

  
 
